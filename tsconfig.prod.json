{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "declaration": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "outDir": "./build",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
